# Application Settings
APP_NAME=google-map-scraper
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration (PostgreSQL + PostGIS)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/gmaps_scraper
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gmaps_scraper
DB_USER=user
DB_PASSWORD=password
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SOCKET_TIMEOUT=5

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Scraper Configuration
SCRAPER_CONCURRENT_JOBS=5
SCRAPER_MAX_RETRIES=3
SCRAPER_TIMEOUT=30
SCRAPER_HEADLESS=true

# Proxy Configuration (Optional)
USE_PROXY=false
PROXY_LIST=
PROXY_ROTATION_ENABLED=false
PROXY_TIMEOUT=10

# Browser Configuration (Playwright)
BROWSER_TYPE=chromium
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
BROWSER_NAVIGATION_TIMEOUT=60000

# Google Maps Configuration
GOOGLE_MAPS_BASE_URL=https://www.google.com/maps
GOOGLE_MAPS_SEARCH_TIMEOUT=30
GOOGLE_MAPS_PLACE_TIMEOUT=30

# H3 Configuration
H3_RESOLUTION=9

# Encryption Configuration
ENCRYPTION_KEY=
ENCRYPTION_ALGORITHM=AES-256-GCM

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Monitoring & Metrics (Optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
METRICS_ENABLED=false

# Job Queue Configuration
QUEUE_BATCH_SIZE=10
QUEUE_POLL_INTERVAL=5
QUEUE_MAX_WORKERS=5

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_BURST=20
